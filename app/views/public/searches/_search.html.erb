  <% if user_signed_in? %>
    <%= form_with url: search_path, method: :get, local: true, html: { class: "w-100" } do |f| %>
      <div class="row mt-2">
        <div class="col-md-8 py-1">
          <%= f.text_field :content, class: "form-control w-100", placeholder: "検索ワード" %>
        </div>
        <div class="col-md-4">
          <div class="row row-cols-1 row-cols-md-3 g-1 ">
            <span class="col d-flex justify-content-center p-1">
              <%= f.select :model, options_for_select({ "User" => "user", "Post" => "post" }),
                  {}, class: "form-select w-100" %>
            </span>
            <span class="col d-flex justify-content-center p-1">
              <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }),
                  {}, class: "form-celect w-100" %>
            </span>
            <span class="col d-flex justify-content-center p-1">
              <button class="btn btn-outline-secondary w-100" type="submit">
                検索
              </button>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  <% end %> 
