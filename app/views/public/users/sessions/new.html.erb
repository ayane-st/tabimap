  <div class = "container">
  <div class = "row no-gutters">
    <div class = "col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-2">
      <h5 class = "text-dark p-4 mb-0" style="background-color: #e9ecef;">既存のアカウントでログイン</h5>
      <div class = "form-body p-4">
        <%= form_with model: @user, url: user_session_path do |f| %>

          <!-- エラーメッセージ -->
          <%= render "devise/shared/error_messages", resource: resource %>

          <!-- メールアドレス -->
          <div class="input-group mb-2 mt-4 d-flex">
            <div class="field w-100">
              <label>メールアドレス</label><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100" %>
            </div>
          </div>
  
          <!-- パスワード -->         
          <div class="input-group mb-2 mt-4 d-flex">
            <div class="field w-100">
              <label>パスワード</label><br/>
              <%= f.password_field :password, autocomplete: "current-password", class:"w-100" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mb-2 mt-3">
              <%= f.check_box :remember_me %>
              <%= f.label :"ログイン状態を保持する" %>
            </div>
          <% end %>

          <%= f.submit '登録', class: "btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "public/users/shared/links" %>

