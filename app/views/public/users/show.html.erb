<div class="container">
  <div class="card-list-container pt-1 pb-5">
    <div class="row">
      <!-- 左側：ユーザー情報（幅1/4）-->
      <div class="col-md-3">
        <%= render 'user_info', user: @user %>
      </div>
      <!-- 右側：投稿カード（3列グリッド）-->
      <div class="col-md-9">
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <%= render 'public/posts/index', posts: @posts %>
        </div>
      </div>
    </div>
  </div>
</div>