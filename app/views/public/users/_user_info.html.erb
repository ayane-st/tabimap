<div class="row">
  <div class="col-md-1">
    <%= image_tag user.get_profile_image(150,150) %>
  </div>
  <div class="col-md-2">
    <% if user == current_user %>
      <%= link_to edit_user_path(user.id), 
          class: "btn btn-outline-secondary edit_user d-flex align-items-center ms-auto" do %>
        <i class="fa-solid fa-gear me-2" style="font-size: 24px;"></i>
        <div>プロフィール編集</div>
      <% end %>
    <% elsif current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
    <% end %>
  </div>

  <table class="table">
    <tr>
      <th>name</th>
      <td class="text-break" style="max-width: 300px;"><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td class="text-break" style="max-width: 300px;"><%= user.introduction %></td>
    </tr>
  </table>