<div class="container">
  <div class="row no-gutters">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5 ">
      <h5 class="text-dark bg-light p-4 mb-0">投稿編集</h5>
      <div class="form-body p-4">
      <%= form_with model: @post do |f| %>
        <% if @post.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <%= @post.errors.count %>件のエラーが発生しました
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, class: "form-control-file post_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :caption %>
          <%= f.text_area :body, class: "form-control post_body" %>
        </div>
        <div class="form-group">
          <%= f.label :rocation %>
          <%= f.text_field :rocation, class: "form-control post_rocation" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>