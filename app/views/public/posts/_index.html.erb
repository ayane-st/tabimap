<div class="card-list-container">
  <!-- カードを4枚並べにする  -->
  <div class="row row-cols-1 row-cols-md-3 g-4 mx-2">
    <% posts.each do |post| %>
      <div class="col mb-4">
        <div class="card">
          <div style="width: 100%; aspect-ratio: 1 / 1; display: flex; justify-content: center;
                      align-items: center; background: #f8f9fa; overflow: hidden;">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_image(1000, 1000), class: "card-img-top" %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-3">
                <% if post.user.present? %>
                  <%= image_tag post.user.get_profile_image(50, 50) %>
                <% else %>
                  <img src="tabimap/app/assets/images/no_image.jpg" width="50" height="50">
                <% end %>
              </div>
              <div class="col-9">
            <p class="card-title mx-2">
              <% if post.user %>
                <%= link_to post.user.name, user_path(post.user) %>
              <% else %>
                不明なユーザー
              <% end %>
            </p>
            <% if post.address.present? %>
              <p class="card-title d-none d-lg-block mx-2">
                <span>
                  <i class="fa-solid fa-location-dot"></i>
                  <%= post.address %>
                </span>
              </p>
            <% elsif post.rocation.present? %>
              <p class="card-title d-none d-lg-block mx-2">
                <span>
                  <i class="fa-solid fa-flag"></i>
                  <%= post.rocation %>
                </span>
              </p>
            <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>