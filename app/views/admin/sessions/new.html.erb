<div class = "container">
  <div class = "row no-gutters">
    <div class = "col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-2">
      <h5 class = "text-dark p-4 mb-0" style="background-color: #e9ecef;">管理者ログイン</h5>
      <div class = "form-body p-4">
        <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>

          <!-- メールアドレス -->
          <div class="input-group mb-2 mt-4 d-flex">
            <div class="field w-100">
              <label>e-mail</label><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100" %>
            </div>
          </div>

          <div class="input-group mb-2 mt-4 d-flex">
            <div class="field w-100">
              <label>password</label><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"w-100" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <%= f.submit "Log in", class: "btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>
