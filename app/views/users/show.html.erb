<h1>Users#show</h1>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>
  <p><%= link_to '退会', user_path(@user), method: :delete, "data-confirm" => "本当に退会しますか？" %></p>
  <% end %>
</div>

<% @posts.each do |post| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>
  <p>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image(300,300) %>
    <% end %>
  </p>
  <p>説明：<%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
</div>
<% end %>
<p>Find me in app/views/users/show.html.erb</p>
